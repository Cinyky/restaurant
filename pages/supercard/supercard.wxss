/* pages/card/card.wxss */
@import "/tpl/template-menu/template-menu.wxss";
page {
  line-height: 1;
  background-color: #f7f7f7;
}
.mask, .mask-transparent {
  position: fixed;
  top: 0;
  height: 100%;
  left: 0;
  width: 100%;
}
.mask {
  background-color: rgba(0, 0, 0, .5);
}
image {
  display: block;
}
.flex-row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.side-padding {
  padding-left: 40rpx;
  padding-right: 40rpx;
}
.txt-center {
  text-align: center;
}
.txt-l {
  font-size: 32rpx;
  color: #111;
}
.txt-m {
  font-size: 28rpx;
  color: #333;
}
.txt-s {
  font-size: 24rpx;
  color: #666;
}
.tc-9 {
  color: #999;
}
.tc-red {
  color: #FF493F;
}
.txt-bold {
  font-weight: 700;
}
.ellipsis {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.card-wrap {
  position: relative;
  padding-top: 40rpx;
  background-color: white;
  background-image: linear-gradient(to bottom, #ddd, white);
  background-image: -webkit-linear-gradient(to bottom, #ddd, white);
}
.card-back {
  position: absolute;
  width: 80rpx;
  height: 52rpx;
  left: 0;
  top: 10rpx;
  background-color: rgba(0, 0, 0, .6);
  border-radius: 0 30rpx 30rpx 0;
}
.card-back image {
  width: 44rpx;
  height: 44rpx;
  margin: 4rpx auto;
}
.card {
  width: 670rpx;
  height: 840rpx;
  margin: 0 auto;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 30rpx 4rpx #eee;
  -webkit-box-shadow: 0 6rpx 30rpx 4rpx #eee;
}
.card-avatar {
  width: 670rpx;
  height: 670rpx;
}
.card-content {
  padding: 40rpx 30rpx;
  font-size: 32rpx;
  line-height: 1;
}
.cc-left {
  flex: 1;
}
.cn-box {
  line-height: 1;
  padding-bottom: 22rpx;
  justify-content: flex-start;
}
.card-name {
  font-size: 36rpx;
  width: 218rpx;
  display: inline-block;
  margin-right: 10rpx;
}
.cc-right {
  width: 84rpx;
  height: 84rpx;
  border: 1rpx solid #ddd;
  border-radius: 4rpx;
}

.fold-bar {
  padding: 20rpx 0;
  background-color: white;
}
.fold-bar image {
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
  transition: all .3s;
  -webkit-transition: all .3s;
}
.rotate {
  transform: rotate(-180deg);
  -webkit-transform: rotate(-180deg);
}
.fold-content {
  background-color: #f5f5f5;
}
.fold-item {
  line-height: 48rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  align-items: flex-start;
}
.fi-middle {
  flex: 1;
  word-break: break-all;
}
.fold-item button {
  line-height: 48rpx;
  font-size: 26rpx;
  margin: 0;
  border-radius: 0;
}

.btn-group {
  padding: 20rpx 40rpx;
  background-color: white;
}
.btn-group button {
  font-size: 28rpx;
  width: 314rpx;
  margin: 0;
  line-height: 80rpx;
}

.viewer-wrap {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background-color: white;
}
.viewer-box {
  line-height: 48rpx;
  justify-content: flex-start;
}
.viewer-wrap image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 10rpx;
  border-radius: 6rpx;
}
.viewer-right {
  width: 160rpx;
}
.viewer-right image {
  margin: 0 auto;
}

.wares-wrap {
  margin-top: 20rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  background-color: white;
}
.wrap-head {
  padding-bottom: 30rpx;
}
.i-right {
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
  vertical-align: middle;
  transform: rotate(-90deg);
}
.wares-box {
  width: 314rpx;
  background-color: white;
  box-shadow: 0 6rpx 30rpx 4rpx #eee;
  -webkit-box-shadow: 0 4rpx 10rpx 1rpx #eee;
}
.wares-pic {
  width: 314rpx;
  height: 314rpx;
}
.wares-name {
  padding: 0 10rpx;
  height: 60rpx;
  margin: 8rpx 0;
  line-height: 28rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.wares-price {
  padding: 10rpx;
}

.intro-wrap {
  margin-top: 20rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  background-color: white;
}
.intro-wrap .p {
  margin-bottom: 30rpx;
}

.tags {
  justify-content: flex-start;
  flex-wrap: wrap;
}
.tag {
  padding: 14rpx 26rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  background-color: #ECFFEB;
  border-radius: 10rpx;
}
.tag-title {
  font-size: 30rpx;
  color: #4c4c4c;
  padding-right: 10rpx;
}
.tag-num {
  color: #0EBC0C;
}

.photos-wrap .wrap-head {
  padding: 30rpx 40rpx;
  margin-top: 20rpx;
  background-color: white;
}
.photo {
  width: 100%;
  display: block;
  margin-bottom: 20rpx;
}

.audio {
  width: 100%;
  height: 160rpx;
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #f8f8f8;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
}
.audio-icon {
  width: 84rpx;
  height: 84rpx;
  margin-right: 20rpx;
  line-height: 84rpx;
  text-align: center;
  background-color: #1AAD1A;
  border-radius: 50%;
}
.audio-icon image {
  display: inline-block;
  width: 36rpx;
  height: 36rpx;
  padding-bottom: 6rpx;
  vertical-align: middle;
}
.audio-right {
  flex: 1;
  overflow: hidden;
}
.audio-name {
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}
.audio-name text {
  font-size: 32rpx;
  color: #666;
}
.audio-progress-box {
  position: relative;
  height: 4rpx;
  background-color: #ccc;
  margin: 20rpx auto;
}
.audio-progress {
  position: relative;
  width: 0;
  height: 100%;
  background-color: #1AAD1A;
  transition: width .3s;
  -webkit-transition: width .3s;
}
.audio-progress::after {
  content: ' ';
  position: absolute;
  width: 16rpx;
  height: 16rpx;
  top: -6rpx;
  bottom: -6rpx;
  right: -16rpx;
  background-color: #1AAD1A;
  border-radius: 50%;
}
.audio-time {
  font-size: 24rpx;
  color: #777;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.share-panel {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 300rpx;
  background-color: white;
}
.panel-main {
  height: 220rpx;
}
.sp-item {
  flex: 1;
  flex-direction: column;
  justify-content: center;
  color: white;
  margin: 0;
  padding: 0;
  line-height: 1;
  background: transparent;
}
.sp-item::after {
  display: none;
}
.sp-item image {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}
.sp-cancel {
  line-height: 70rpx;
  border-top: 10rpx solid #f7f7f7;
}

.i-message-box {
  font-size: 24rpx;
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  right: 30rpx;
  bottom: 100rpx;
  background-color: rgba(255, 255, 255, .9);
  border: 1rpx solid #eee;
  border-radius: 50%;
}
.i-message-box image {
  width: 48rpx;
  height: 48rpx;
  margin: 12rpx auto 4rpx;
}
.myVideo {
  width:100%;
}
.getPhone_container{
  /* position: relative; */
}
.getPhone_button{
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  opacity: 0;
  z-index: 9999;
}