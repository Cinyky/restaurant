page {
	 background: #f5f5f5; 

}
.class-tab{
 	position: fixed;
	display: -webkit-flex;
	left: 0;
	top: 0;
  padding-top: 20rpx;
	justify-content: center;
	background: #ffffff;
	width: 100%;
  box-sizing: border-box;
	z-index: 1;
	-webkit-transition: background 0.5s ease-in-out;
}
.text-select{
	width: 180rpx;
	font-size: 33rpx;
	color: red;
	height: 60rpx;
	border-bottom-width: 6rpx;
	border-color: red;
	border-style: solid;
	text-align: center;
	border-top-width: 0;
	border-left-width: 0;
	border-right-width: 0;
}
.text-normal{
	width: 180rpx;
	font-size: 33rpx;
	color: #4D4D4D;
	height: 60rpx;
	border-bottom-width: 0;
	border-color: red;
	border-style: solid;
	text-align: center;
	border-top-width: 0;
	border-left-width: 0;
	border-right-width: 0;
}
.parent{
	display: flex;
	flex-direction: column;
  padding-top: 80rpx;
}

