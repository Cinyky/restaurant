@import "/utils/my_iconfont.wxss";

page{
  width: 100%;
  height: 100%;
}
view,textarea{
  box-sizing: border-box;
}
.page_wrapper{
  margin-top: 20rpx;
  background: #fff;
  width: 100%;
}
.box-button{
  padding: 10rpx;
}
.btn-submit{
  color: #fff;
  background: #DB384C;
  border-radius: 10rpx;
  font-size: 40rpx;
  text-align: center;
  /*padding: 10rpx;*/
}
.product-box{
  border-top: 1rpx solid #D9D9D9;
  border-bottom: 1rpx solid #D9D9D9;
}
.star-box{
  padding: 5rpx;
  text-align: center;
  letter-spacing: 15rpx;
}
.star-box .fa{
  font-size: 60rpx;
  color: #eab229;
}
.comment_box{
  padding: 20rpx;
  width: 100%;
}
.comment_input{
  border: 1rpx solid #eeeeee;
  width: 100%;
  padding: 20rpx;
}