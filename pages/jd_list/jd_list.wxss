@import "/tpl/template-menu/template-menu.wxss";
page{
  height: 100%;
  background: #f5f5f5;
}
.jd_item{
  background: #fff;
  border-radius: 20rpx;
  /*border: 1rpx solid #000;*/
  padding: 0;
  margin: 20rpx;
  overflow: hidden;
}
.jd_brand{
  width: 100%;
  height: 450rpx;
}
.jd_desc{
  padding: 20rpx 30rpx;
}
.jd_desc_line{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
  font-size: 28rpx;
  color: #898989;
  margin-bottom: 20rpx;
}
.jd_name{
  font-size: 45rpx;
  color: #000;
}
.jd_min_price{
  font-size: 40rpx;
}
.jd_label{
  border: 1rpx solid #ececec;
  border-radius: 4rpx;
  padding: 4rpx;
  margin-left: 5rpx;
}