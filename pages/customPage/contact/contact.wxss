@import "/utils/customPage.wxss";
@import "../header.wxss";
@import "/tpl/template-menu/template-menu.wxss";
/****新闻******/
.banner{width:100%;height:280rpx;}
.section .section-tit{height:92rpx;line-height: 92rpx;border-bottom: 1rpx solid #f5f5f5;position: relative;}
.section .section-h2{font-size: 40rpx;position: relative;display: inline-block;}
.section .section-h2::before{content: '';display: block;width:100%;height: 4rpx;background: #ca9919;position: absolute;bottom: -0.06%;left: 0rpx;}
.section .section-tit .icon{position: absolute;top:50%;-webkit-transform: translateY(-50%);transform: translateY(-50%);right: 30rpx;color:#d3d2d2;}
.section .section-item{padding-left: 30rpx;padding-right: 30rpx;line-height: 1.3;}
.section .section-name{font-size: 40rpx;}
.section .section-item .section-p{padding-bottom: 16rpx;}

.section .section-item .section-p{ padding:30rpx 0; text-align: right; min-height: 36rpx; color: #000;font-size: 16px;}
.c-tit{ display: -webkit-box; -webkit-box-align: center;}
.section-p .sub{ color: grey;overflow: visible; margin-left: 100rpx; white-space: normal; word-wrap: break-word;}

.c-map{ height: 200px; overflow: hidden; background: #ccc;}
.phone-item{ width: 50%;display: inline-block;white-space:nowrap;}
.phone-item:active{ color: #09bb07;}
.phone-item:nth-child(n+3){ margin-top: 5px;}