@import "/utils/customPage.wxss";
page{
 
  font-family: 微软雅黑;
   font-size: 25rpx;
}
.index1{
  display: flex;
  flex-direction: row;
  justify-content: center;
  background-color: #fff;
  padding: 30rpx 10rpx;
  position: relative;
}
.index1_1 image{
  width:80rpx;
  height:80rpx;
  vertical-align: middle;
}
.index1_2{
line-height: 80rpx;
height: 80rpx;
}
.index1_2 text{
  vertical-align: middle;
  font-size: 30rpx;
height: 80rpx;
}

.index3{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 40rpx;
  background-color: #fff;
  /* margin-top:20rpx; */
}
.index3 text:nth-of-type(1){
font-size: 40rpx;
}
.me1{
  width: 100%;
}
.me1 image{
  width: 100%;
}
.me2{
  background-color: #fff;
  padding: 10rpx 30rpx;

}
.call1{
  width: 100%;
  height: 30rpx;
  background-color: #eee;
}
.index4{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.index5{
display: flex;
flex-direction: row;
justify-content: space-around;
margin: 30rpx 0;
}
.index6{
  display: flex;
  flex-direction: column;
