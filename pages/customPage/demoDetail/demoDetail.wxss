  height: 200rpx;
}
.index7{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
   margin-left: 20rpx;
}
.index7 view image{
  width: 300rpx;
  height: 200rpx;
}
.slide{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  /* background-color: #eee; */
