page{
    font-family: "微软雅黑";
    background: #6200c6;
    height: 100%;
    overflow:scroll;
    width: 100%;
}
#body{
    padding-top:10%;
}

/*获奖图片*/
.pic_border{
    border:5rpx dotted white;
    width:80%;
    margin:0 10% -1% 10%;
}
.prize_pic{
    width:96%;
    margin:2% 2% 0 2%;
    height:400rpx;
    background: white;
}
.prize_pic image{
    width:100%;
    height:400rpx;
}
/*奖品名称*/
.prize_name{
    background:	#6C0EE0;
    width: 90%;
    margin:0 5% 2% 5%;
    border-top:5rpx solid #9F3DEF;
    
}
.prize_name text{
    font-size: 18px;
    display: block;
    color: #F3E819;
    text-align: center;
}

/*集字方框*/
.wordsbody{
    background: #6801F8;
    width: 96%;
    margin:0 2%;
}
.game_time text{
    font-size: 13px;
    display: block;
    color:gainsboro;
    text-align: center;
}

/*字框*/
.words{
   background: #520AC6;
    width: 96%;
    margin: 0 2%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    flex-wrap: wrap;
}
.words .num{
    font-size: 11px;
    background-color:yellow;
    text-align: center;
    display: block;
}

/*字*/
.one{
    padding: 1.7%;
}
.word{
    border:10rpx solid gray;
    border-radius:50%;
    height: 150rpx;
    width: 150rpx;
    background: #4B0082;
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-items: center;
}
.word text{
    display: block;
    font-family: "隶书";
    font-size: 40px;
    color: white;
}
.drawbutton {
    background:#FFA500;
    width:60%;
    margin:5% 20%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    height: 80rpx;
    border-radius: 40rpx;
}
.drawbutton text{
    font-size: 20px;
    color: white;
}

.guize{
    width: 60%;
    margin: 5% 20%;
    display:flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    height: 60rpx;
    border-radius: 30rpx;
    border: 1rpx solid whitesmoke;
}
.guize text{
    font-size: 18px;
    color: white;
}

/*三个列表*/
.list{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}
.list-s{
    height:50rpx;
    background: #490AB3;
    width: 20%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.list .list-s text{
    font-size: 15px;
    color: white;
}

/*规则弹出*/
.popView{
    height: 100%;
    width: 100%;
    position: fixed;
    z-index: 100;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: rgba(52, 52, 52, 0.5);
}
.popView .popViews{
    width: 600rpx;
    background-color: #6834C8;
    color:white;
    font-size: 12px;
    padding: 5%;
}

/*列表具体*/
.list-d{
    background: #8441F1;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}
/*列表具体内容字体*/
.list-d text{
	color:white;
    font-size: 13px;
}

/*兑奖码*/
.dui{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    color:white;
    font-size: 15px;
}