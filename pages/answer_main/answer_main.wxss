@import "/utils/weui.wxss";
@import "/utils/my_iconfont.wxss";

view{
  box-sizing: border-box;
}
page{
  height: 100%;
  background: #fff;
  font-size: 30rpx;
  color: #000;
  overflow: hidden;
}
.page_wrapper{
  color: #fff;
  width: 100%;
  height: 100%;
}
.page_header{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
}
.page_main{
  margin: 30rpx;
  background: #fff;
  color: #666;
  height: 90%;
  border-radius: 10rpx;
  overflow: hidden;
}
.main_img{
  width: 100%;
  height: 45%rpx;
}
.question_main{
  position: absolute;
  /*height: 60rpx;*/
  background: rgba(0,0,0,0.5);
  color: #fff;
  bottom: 10rpx;
  left: 0;
  width: 100%;
  display: flex;
  align-items: center;
  padding: 10rpx 30rpx;
}
.abs_center{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.q_num,.q_type{
  margin-right: 10rpx;
}
.q_num{
  display: inline-block;width: 50rpx;text-align: center;background: #fff;color: #333;border-radius: 50%;margin-right: 10rpx;
  line-height: 50rpx;
}
.q_type{
  display: inline-block;
  width: 50rpx;
  text-align: center;
  background: #09bb07;
  color: #fff;
  border-radius: 10rpx;
  margin-right: 10rpx;
  line-height: 50rpx;
}
.q_text{
  width: 100%;
  word-break:break-all;
  line-height: 50rpx;
  font-size: 36rpx;
}
.ans_list{
  padding: 30rpx;
  height: 50%;
  width: 630rpx;
}
.ans_item{
  margin: 10rpx 0;
  word-break: break-all;
}
.next_btn{
  width: 60%;
  height: 100rpx;
  color: #fff;
  border-radius: 50rpx;
}
.info_mask{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background: rgba(0,0,0,0.4);
  color: #333;
}
.info_dialog{
  background: #fff;
  width: 600rpx;
  height: 500rpx;
  padding: 30rpx;
  border-radius: 10rpx;
}
.input_group{
  margin-top: 30rpx;
}
.input_group>input{
  border-bottom: 1rpx solid #aaaaaa;
  padding: 10rpx;
}
.info_dialog>button{
  margin-top: 30rpx;
  color: #fff;
}
.info_dialog>button::after{
  display: none;
}