@import "../../font.wxss";
@import "../../utils/weui.wxss";
page{
  height: 100%;
  background: #f5f5f5;
  font-size: 30rpx;
  color: #000;
}
.order_item{
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.order_header{
  font-size: 40rpx;
  border-bottom: 1rpx solid #eeeeee;
  padding-bottom: 10rpx;
}
.order_body{
  display: flex;
  padding-top: 10rpx;
}
.order_left{
  width: 80%;
  color: #898989;
  font-size: 25rpx;
}
.order_tc_name{
  font-size: 36rpx;
  color: #333;
}
.order_right{
  width: 20%;
  text-align: right;
}
.order_foot{
  text-align: right;
}
.order_foot>button{
  display: inline;
  background: #fff;
  border-radius: 0;
  padding: 10rpx 20rpx;
  border: 2rpx solid #898989;
  color:#898989;
  font-size: 28rpx;
  margin: 0 10rpx;
}
.order_price{
  font-size: 36rpx;
}
