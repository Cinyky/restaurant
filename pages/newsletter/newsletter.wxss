@import "/tpl/template-menu/template-menu.wxss";

.m-activity-item {
    width: 100%;
    height: 240rpx;
    margin-bottom: 10rpx;
    background: white;
}

.m-activity-img {
    padding: 20rpx;
    width: 260rpx;
    height: 200rpx;
    float: left;
}

.m-activity-info {
    width: 450rpx;
    height: 100%;
    float: left;
    padding: 20rpx;
    box-sizing: border-box;
    display: flex;
    flex-flow: column;
    justify-content: space-between
}

.m-activity-name {
    font-size: 14px;
    /*margin-bottom: 40rpx;*/
    /*margin-top: 10rpx;*/
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.gray {
    font-size: 35rpx;
    display: inline-block;
    color: #888;
}

.m-activity-time {
    margin-left: 10rpx;
    margin-right: 30rpx;
    font-size: 26rpx;
    color: #888;
}

.m-category {
    width: 100%;
    background: #fff;
}

.m-category-l {
    width: 100%;
    z-index: 2;
    background: #fff
}

.m-category-l-item {
    padding: 10px 8px;
    display: block;
    flex-flow: column;
    font-size: 14px;
}

.m-category-l-item:last-child {
    background-color: #FFF;
    border: none;
}

.uploadWrap {
    width: 100%;
    display: flex;
    display: -webkit-box;
    flex-direction: column;
}

.m-category-l-select {
    background-color: #f8f8f8;
    border-right: none;
    color: #DB384C;
}

.m-category-l-select::after {
    content: "";
    width: 6rpx;
    position: absolute;
    left: 0;
    top: 0;
    height: 104rpx;
    background-color: #DB384C;
    margin-top: -2rpx;
}
