	font-family: "微软雅黑";
}
.container{
	overflow:scroll;
	width: 100%;
	height: 100%;
	background: white;
  border-bottom: 1px solid #eee;
  padding-bottom: 20rpx;
}

.pic-view{
	width:100%;
	height: 240px;
}
.pic-view image{
	/*height:100%;*/
	width: 100%;
}

.time-view{
	width:100%;
	height:7%;
	background: orangered;
	font-size: 20px;
	color: white;
	display: block;
	text-align: center;
}

.name-view{
	width: 92%;
	height: 9%;
	margin: 2% 4%;
}
.name-view text{
	font-size: 32rpx;
	color: black;
}

.price-view{
	width: 92%;
	height: 5%;
	margin: 2% 4%;
}
.nowPrice {
	color: red;
}
.bluetext{
	color: blue;
}
.line-delete {
	text-decoration: line-through;
	font-size: 12px;
	color: #999;
}

.xian{
	height: 1rpx;
	width: 92%;
	background: #B0B0B0;
	margin: 2% 4%;
}
.people-view{
	width: 92%;
	height:25%;
	margin: 2% 4%;
}
.helpInfo{
	width:92%;
  padding: 2% 4%;
  background: #fff;
  margin-top: 2%;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}
.bangkan{
	width: 92%;
	margin: 2% 4%;
	text-align: center;
	display: block;
  font-size: 30rpx;
  overflow: hidden;
}

.fixedBottom {
	width: 100%;
	height: 84rpx;
	position: fixed;
	bottom: 0px;
	background-color: red;
  line-height: 84rpx;
}
.fixedBottom text{
	width: 100%;
	height:100%;
	text-align: center;
	color: #fff;
	font-size: 32rpx;
	display: block;
}
