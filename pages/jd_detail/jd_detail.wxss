@import "../../font.wxss";
page{
  height: 100%;
  background: #f5f5f5;
  font-size: 30rpx;
  color: #000;
}
.slide{
  height: 450rpx;
}
.slide-image{
  width: 100%;
  height: 100%;
}
.address_wrapper{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  padding: 20rpx;
  color: #898989;
}
.main_wrapper{
  margin-top: 20rpx;
  background: #fff;
}
.tab_wrapper{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.tab_wrapper>view{
  text-align: center;
  box-sizing: border-box;
  width: 250rpx;
  border-bottom: 4rpx solid #eeeeee;
  padding: 20rpx;
}
.time_select{
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  border-bottom: 2rpx solid #eeeeee;
}
.time_select>view{
  text-align: center;
  box-sizing: border-box;
  width: 50%;
}
.time_select>view:first-child{
  border-right: 2rpx solid #eeeeee;
}
.text_gray{
  color: #898989;
}

.kf_item_main{
  height: 150rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
}
.kf_item_main view{
  box-sizing: border-box;
}
.img_wrapper{
  width: 200rpx;
  height: 150rpx;
  display: inline-block;
}
.img_wrapper>image{
  width: 200rpx;
  height: 150rpx;
}
.kf_info{
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex-grow: 1;
}
.kf_name{
  font-size: 40rpx;
}
.kf_desc_text{
 color:#898989
}
.kf_min_price{
  text-align: right;
  font-size: 36rpx;
}
.kf_item_taocan{
  background: #f8f8f8;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 2rpx solid #eeeeee;
}
.taocan_info{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.taocan_price{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.jdinfo_wrapper{
  padding: 20rpx;
}
.info_title{
  font-size: 38rpx;
  color: #898989;
  padding: 20rpx;
  border-bottom: 2rpx solid #eeeeee;
}
.jd_fw_wrapper{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
}
.jd_fw_wrapper>view{
  width: 33%;
  box-sizing: border-box;
  border: 1rpx solid #898989;
  color: #898989;
  padding: 5rpx;
  margin: 5rpx;
  text-align: center;
}
.yd_dialog_wrapper{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.2);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.yd_dialog{
  width: 80%;
  background: #fff;
  border-radius: 10rpx;
}
.yd_dialog_header{
  border-bottom: 2rpx solid #eeeeee;
  padding: 20rpx;
}
.yd_dialog_header_title{
  font-size: 40rpx;
}
.yd_dialog_header_taocan{
  font-size: 30rpx;
  color: #898989;
}
.yd_dialog_body{
  padding: 20rpx;
  border-bottom: 1rpx solid #eeeeee;
}
.yd_dialog_labels{
  margin: 10rpx 0;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
}
.yd_dialog_labels>view{
  width: 30%;
  text-align: center;
  box-sizing: border-box;
  padding: 10rpx;
  border: 1rpx solid #dddddd;
  background: #eeeeee;
  color: #898989;
  margin: 5rpx 0;
}
.comment_item,.comment_item>view{
  box-sizing: border-box;
}
.comment_item{
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #eeeeee;
}
.comment_headimg{
  width: 100rpx;
  height: 100rpx;
}
.headimg_box{
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}