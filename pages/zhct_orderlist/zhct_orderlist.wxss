.order_show_payMethod{
  width: 240rpx;
  height: 92rpx;
  line-height: 92rpx;
  text-align: center;
  background: #09bb07;
  color: #fff;
  font-size: 30rpx;
}
.order_fixed_payMethod_container{
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.37);
  z-index: 9999;
}
.order_fixed_payMethod_content{
  position: absolute;
	top: 50%;
  left: 50%;
	transform: translate(-50%,-50%);
  background: #fff;
  z-index: 99999;
  width: 80%;
  border-radius: 4rpx;
}
.order_payMethod_money_content{
  border-bottom: 1px solid #e5e5e5;
  height: 100rpx;
  line-height: 100rpx;
}
.order_payMethod_money_content button{
    color: #000;
    font-size: 36rpx;
    border: none;
    background: #fff;
    -webkit-appearance: none;
    outline: none;
    text-align: left;
    padding-left: 50rpx;
    height: 100rpx;
    line-height: 100rpx;
}
