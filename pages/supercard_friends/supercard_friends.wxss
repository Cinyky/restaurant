/* pages/timelines/timelines.wxss */
@import '/cardifont.wxss';

page, .page-wrapper {background: white;min-height: 100%;}

/* layout */
.bs {box-sizing: border-box;}
.flex-r {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
  justify-content: space-between;
}
.gap {margin-bottom: 20rpx;}
.gap2 {margin-bottom: 40rpx;}
.gap-above {margin-top: 20rpx;}
.modal, .mask {
  position: fixed;
  top: 0;
  height: 100%;
  left: 0;
  width: 100%;
  z-index: 10000;
  overflow: hidden;
}
.mask {background-color: rgba(0, 0, 0, .5);}

/* text */
.t-left {text-align: left;}
.t-center {text-align: center;}
.t-right {text-align: right;}
.t-indent {text-indent: 2em;}

.t-largest {font-size: 80rpx;} /* 大的数字、金额、时间等 */
.t-h1 {font-size: 40rpx;} /* 页面大标题类 */
.t-large {font-size: 36rpx;} /* 页面大按钮类 */
.t-h2 {font-size: 34rpx;} /* 页面次要层级信息 */
.t-m {font-size: 28rpx;} /* 次要描述信息 */
.t-sub {font-size: 26rpx;} /* 辅助信息 */
.t-s {font-size: 22rpx;} /* 说明文本 */
.t-bold {font-weight: bold;}
.t-linethrough {text-decoration: line-through;}

.tc-yes {color: #09BB07;}
.tc-no {color: #E64340;}
.tc-0 {color: black;}
.tc-f {color: white;}
.tc-m {color: #353535;}
.tc-g {color: #888888;}
.tc-l {color: #B2B2B2;}
.tc1 {color: #5B6A8D;}

.state-item {
  padding: 20rpx;
  align-items: flex-start;
  border-bottom: 1rpx solid #ddd;
}
.s-avatar {
  width: 84rpx;
  height: 84rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}
.s-right, .st-right {
  flex: 1;
  overflow: hidden;
}
.s-top {padding: 8rpx 0 14rpx;}
.st-right {
  flex: 1;
  padding-left: 20rpx;
  overflow: hidden;
}
.sbtn-share {
  padding: 0;
  margin: 0;
  background: transparent;
  border: 0;
}
.sbtn-share::after {display: none;}
.s-mark {
  padding: 2rpx 20rpx;
  border: 1rpx solid #eee;
  border-radius: 4rpx;
}
.s-below {
  position: relative;
  height: 80rpx;
}
.op-box {
  position: absolute;
  top: 5rpx;
  right: 80rpx;
  width: 0;
  height: 70rpx;
  background: #444;
  border-radius: 6rpx;
  transition: width .2s;
  overflow:hidden;
}
.op-box-show {width: 340rpx;}
.op-item {
  flex: 1;
  text-align: center;
  line-height: 38rpx;
}
.op-item:first-child {
  border-right: 1rpx solid #000;
}
.op-item .iconfont {
  font-size: 26rpx;
  padding-right: 8rpx;
}
.s-content {
  padding: 10rpx;
  background: #F3F2F7;
}
.sc-img {
  width: 76rpx;
  height: 76rpx;
  margin-right: 10rpx;
}
.s-content text {
  flex: 1;
  line-height: 36rpx;
  height: 72rpx;
  overflow: hidden;
}
.s-extras {
  position: relative;
  padding: 10rpx;
  background: #F3F2F7;
}
.s-extras::before {
  content: '';
  position: absolute;
  border: 10rpx solid transparent;
  border-bottom-color: #F3F2F7;
  top: -20rpx;
  left: 20rpx;
}
.s-hr {
  width: 100%;
  height: 1rpx;
  margin: 8rpx 0;
  background: #e4e4e4;
}
.icon-xin {margin-right: 8rpx;}

.ci-container {
  position: fixed;
  height: 88rpx;
  bottom: 0;
  left: 0;
  width: 100%;
  padding-left: 14rpx;
  padding-right: 14rpx;
  background: white;
  border-top: 1rpx solid #ddd;
}
.ci-box {
  height: 88rpx;
}
.comment-input {
  flex: 1;
  padding: 6rpx;
  margin-right: 14rpx;
  border: 1rpx solid #eee;
  border-radius: 6rpx;
}

/* side line */
.sideline {
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  overflow: hidden;
}
.sideline-m {
  display: inline-block;
  position: relative;
}
.sideline-m::before, .sideline-m::after {
  content: ' ';
  position: absolute;
  left: -148rpx;
  top: 40rpx;
  width: 120rpx;
  height: 1rpx;
  background-color: #e8e8e8;
}
.sideline-m::after {
  left: auto;
  right: -148rpx;
}
.sideline-dot {
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  margin: 34rpx auto;
  background-color: #ddd;
  border-radius: 50%;
}