.m-coupon-items{display:flex;height: 190rpx;}
.m-coupon-items .item-bg{width: 710rpx;height: 190rpx;position: absolute;left: 0;top:0;}
.coupon-item-left{position: absolute;color: white;text-align: center;width: 250rpx;padding: 25rpx 0rpx;}
.item-left-top{line-height: 100rpx;font-weight: bold;}
.item-left-top label{font-size: 75rpx;}
.item-left-bottom{font-size: 24rpx;}
.coupon-item-right{left: 250rpx;top:0;width:100%;height:100%;font-size: 22rpx;color: gray;flex:2}
.item-title{line-height: 40rpx;font-size: 28rpx;overflow:hidden;text-overflow:ellipsis;display:-webkit-box;-webkit-box-orient:vertical;-webkit-line-clamp:2;margin:15rpx}
.item-title-black{color: #333;}
.item-middle{height: 50rpx;line-height: 50rpx;font-size: 24rpx;margin:15rpx}
.item-usenow{font-size: 24rpx;border:1px solid #DB384C;color: #DB384C;border-radius: 40rpx;padding: 0 15rpx;line-height: 40rpx;/*margin-left:50rpx;*/float:right;display:inline-block}
.item-desc{height: 50rpx;line-height: 50rpx;margin-top: 5rpx;overflow:hidden;text-overflow:ellipsis;margin-left:15rpx}
