@import "../../image/iconfont.wxss";
page{
	background: #F5F5F5;
}
.noView{
	background: #F5F5F5;
	height: 100%;
	bottom:0;
}

.buttonView{
	height: 500rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}
.buttonView text{
	background: red;
	height: 100rpx;
	width: 450rpx;
	border-radius: 25rpx;
	line-height: 100rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	color: white;
}



/*名片*/
.quan{
	margin: 3%;
}
.m-animate-warp{overflow: hidden;height: 500rpx;-webkit-animation: imageAnimation 15s linear infinite alternate;animation: imageAnimation 15s linear infinite alternate;}
.m-animate-img{width: 100%;height: 600rpx;overflow: hidden;-webkit-animation: imageAnimation 15s linear infinite alternate;animation: imageAnimation 15s linear infinite alternate;webkit-backface-visibility:hidden;-webkit-filter: blur(5px);filter: blur(5px);margin-top: -20px;}
.zhezhao{
	background-color: rgba(52, 52, 52, 0.4);
	height: 500rpx;
	z-index: 100;
	position: fixed;
	width: 94%;
}
.zhezhao image{
	width: 150rpx;
	border-radius: 50%;
	margin-left: 3%;
	margin-top: 5%;
	margin-bottom: 5%;
}
.topView{
	display: flex;
	border-bottom: 2rpx solid gray;
}

.nameView{
	display: flex;
	justify-content: center;
	align-items: left;
	flex-direction: column;
	margin-left: 2%;
}
.infoView{
	margin-left: 3%;
	margin-right: 3%;
	margin-top: 10%;
	height: 150rpx;
	display: flex;
	flex-direction: column;
	align-items: left;
}
.demoView{
	display: flex;
	justify-content: space-around;
}


