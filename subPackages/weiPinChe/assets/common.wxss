@import "/utils/my_iconfont.wxss";
@import "wpc_icon.wxss";
@import "wpc_icon2.wxss";
@import '/utils/weui.wxss';
page {
  background-color: #f5f5f5;
}

view {
  font-size: 24rpx;
}

.mgt5 {
  margin-top: 5rpx;
}

.mgt10 {
  margin-top: 10rpx;
}

.mgt15 {
  margin-top: 15rpx;
}

.mgt20 {
  margin-top: 20rpx;
}

.mgt25 {
  margin-top: 25rpx;
}

.mgt30 {
  margin-top: 30rpx;
}


.width50 {
  width: 50%;
}

.width80 {
  width: 80%;
}

.width100 {
  width: 100%;
}

.btn-group {
  width: 100%;
  display: flex;
  justify-content: center;
  text-align: center;
}

.btn-group .btn-container {
  display: flex;
  justify-content: stretch;
}

.btn-group .btn-container  view {
  background: #fff;
  padding: 15rpx 30rpx;
}

.radius-left {
  border-radius: 15rpx 0 0 15rpx;
  width: 50%;
}

.radius-right {
  border-radius: 0 15rpx 15rpx 0;
  width: 50%;
}

.bg-active {
  color: #fff;
}
.bg-danger{
  background-color: #e64340 !important;
  color: #fff;
}
.bg-white{
  background: #fff;
}
.badge{
  display: flex;
  padding: 6rpx;
  width:32rpx;
  height: 32rpx;
  border-radius: 50%;
  justify-content: center;
  align-items: center;
  font-size: 22rpx;
}
.badge>.iconfont{
  font-size: 22rpx;
}

.text-gray {
  color: #898989;
}

.text-blue {
  color: #009aff;
}

.border {
  border: 1px solid #f5f5f5;
}

.weui-grids {
  display: flex;
  border: none;
  align-items: stretch;
}

.weui-grid {
  flex-grow: 1;
  border: none;
  background: #fff;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}
.flex-row{
  display: flex;
  flex-direction: row;
  background: #fff;
  align-items: stretch;
}
.flex-row>view{
  flex-grow: 1;
}
.mbtn-primary{
  padding: 15rpx 30rpx;
  background: #009aff;
  display: inline-block;
  color: #fff;
  border-radius: 5px;
  word-break: keep-all;
}
.vertical-center{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.row-right{
  display: flex;
  justify-content: flex-end;
}
.text-del{
  text-decoration: line-through;
}
.abs_center{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.float_btn{
  width:80rpx;
  height: 80rpx;
  color: #fff;
  position: fixed;
  right: 10rpx;
  bottom: 120rpx;
  border-radius: 50%;
  opacity: 0.8;
}
.float_btn>.iconfont{
  font-size: 40rpx !important;
}