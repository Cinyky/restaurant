.cy_shade {
    background-color: #000;
    opacity: .6;
    position: absolute;
    display: none;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
}

.cy_show {
    display: block!important;
}

.cy_handle-bar {
    padding: 0 15px;
    height: 80rpx;
    background-color: #fff;
}

.cy_confirm {
    text-align: right;
}

.cy_selector-area {
    height: 600rpx;
    width: 100%;
    background-color: #eee;
    position: absolute;
    display: none;
    bottom: 0;
    overflow-y: scroll;
}

.cy_selector {
    text-align: center;
    height: 520rpx;
}

.cy_picker {
    font-size: 32rpx;
    height: 60rpx;
    line-height: 60rpx;
}

.cy_actived {
    color: #09bb07;
}

.cy_area-selector {
    height: 520rpx;
}

button {
    margin: 30px;
}

.txt {
    text-align: center;
}

.code {
    margin-top: 20px;
    text-align: center;
}

.gesture {
    width: 90%;
    text-indent: 20rpx;
    margin: 0 auto;
    padding: 20rpx 0;
    border: 1px solid rgb(25,167,24);
