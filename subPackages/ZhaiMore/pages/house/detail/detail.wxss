@import "../../../__wuBaseWxss__/2.wxss";

.page-container {
    height: calc(100vh - 120rpx);
    overflow: hidden;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
}

.top-pic image {
    width: 750rpx;
    height: 375rpx;
    vertical-align: top;
}

.video {
    width: 100%;
    height: 375rpx;
    margin-bottom: 0;
    padding-bottom: 0;
}

.video::after {
    display: none;
}

.switchBox .flex {
    padding-bottom: 14rpx;
}

.pd14 {
    padding-top: 14rpx;
}

.estate-desc {
    padding: 30rpx;
    position: relative;
    background-color: #fff;
}

.estate-feature {
    font-weight: bold;
}

.counter-btn {
    position: absolute;
    bottom: 30rpx;
    right: 30rpx;
    overflow: visible;
}

.counter-btn::before {
    border-color: currentColor;
    border-radius: 20rpx;
}

.agencer-box {
    padding: 24rpx 60rpx 24rpx 30rpx;
    background-color: #fff;
    align-items: center;
}

.agencer-avator {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}

.agencer-box .icon-dianhua1 {
    font-size: 60rpx;
}

.estate-info {
    padding: 24rpx 30rpx 24rpx 30rpx;
    background-color: #fff;
}

.info-content {
    justify-content: space-between;
    margin-top: 6rpx;
}

.house-info-lf {
    width: 50%;
}

.share-btn {
    float: right;
    margin-right: 40rpx;
}

.nearby {
    /*padding-bottom: 144rpx;*/
    padding-top: 20rpx;
}

.nearby-head {
    padding: 30rpx;
    background-color: #fff;
    justify-content: space-between;
}

.map-box {
    width: 100%;
}

.map-box map {
    width: 100%;
}

.map-bottom-bar {
    padding: 20rpx 30rpx;
    background-color: #fff;
}

.map-bottom-icon {
    font-size: 45rpx;
}

.buttombar-box {
    background-color: #fff;
    position: fixed;
    bottom: 0;
}

.buttombar-box-left>view {
    padding: 20rpx 0;
    line-height: 40rpx;
}

.buttombar-box-left>view:active {
    background: rgba(0,0,0,0.05);
}

.buttombar-box-left .iconfont {
    font-size: 45rpx;
}

.buttombar-box-right {
    line-height: 120rpx;
    border-radius: 0;
    color: #fff;
    padding: 0 40rpx;
}