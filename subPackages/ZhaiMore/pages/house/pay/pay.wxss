@import "../../../__wuBaseWxss__/2.wxss";

.cell {
    position: relative;
    padding: 30rpx 60rpx 30rpx 30rpx;
    background-color: #fff;
    justify-content: space-between;
}

.cell::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 2rpx;
    background-color: #ececec;
    transform: scale(1,0.5);
}

.picker {
    text-align: right;
}

.zhu {
    padding: 10rpx 30rpx;
}

.zhu .icon-zhuyi {
    font-size: 32rpx;
}

.payBox {
    width: auto;
    margin: 20rpx 30rpx;
}

.payBox:active {
    opacity: 0.9;
}

.submit-btn {
    line-height: 88rpx;
}

.submit-btn::after {
    border: none;
}