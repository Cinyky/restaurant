@import "/tpl/template-menu/template-menu.wxss";
@import "../../assets/common.wxss";

page, view, button, text, form, input {
  margin: 0;
  padding: 0;
  /*box-sizing: border-box;*/
}

page, .page {
  background: #f5f5f5;
  font-size: 30rpx;
  color: #888;
}

.page{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.item{
  width: 700rpx;
  background: #fff;
  margin-left: 25rpx;
  box-sizing: border-box;
  padding: 20rpx;
  margin-top: 20rpx;
}
.line4{
  display: flex;
  justify-content: flex-end;
}
.line4>button{
  font-size: 30rpx;
  line-height: initial;
  width: 200rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: none;
  border-radius: 0;
}
.line4>button:after{
  display: none;
}
.line1,.line2,.line3{
  display: flex;
  justify-content: space-between;
  margin: 10rpx 0;
}