@import "/tpl/template-menu/template-menu.wxss";
@import "../../assets/common.wxss";

page, view, button, text, form, input {
  margin: 0;
  padding: 0;
  /*box-sizing: border-box;*/
}

page, .page {
  background: #f5f5f5;
}

.page{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.author_item{
  box-sizing: border-box;
  margin: 20rpx 0;
  display: flex;
  width: 700rpx;
  flex-direction: row;
  background: #fff;
  padding: 40rpx;
  border-radius: 10rpx;
}
.author_img_box{
  width: 100rpx;
  height: 100rpx;
  align-self: flex-start;
  margin-right: 40rpx;
}
.author_img{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.author_info_box{
  align-self: flex-start;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
  flex-grow: 1;
  height: 100rpx;
}
.author_info_box>view:first-child{
  font-size: 30rpx;
  color: #000;
}
.author_info_box>view:last-child{
  font-size: 28rpx;
  color: #888;
}
.author_phone{
  align-self: flex-end;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.author_phone .iconfont_dec2{
  font-size: 50rpx;
}
.author_phone>view:last-child{
  font-size: 30rpx;
}