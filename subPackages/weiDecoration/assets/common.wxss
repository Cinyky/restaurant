@import "iconfont_decoration.wxss";
@import "iconfont_decoration2.wxss";
@import "/utils/weui.wxss";

.select_btn_group{
  background: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 36rpx;
  color: #888888;
  width: 700rpx;
  box-sizing: border-box;
}
.select_btn_group .iconfont_dec{
  font-size: 36rpx;
}
.select_btn_item{
  padding: 20rpx;
}
.select_list{
  width: 700rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}
.select_list > view{
  font-size: 30rpx;
  box-sizing: border-box;
  background: #fff;
  width: 220rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
}
.select_list > view:nth-child(3){
  margin-right: 0;
}

.zx_list{
  margin-top: 20rpx;
  padding-bottom: 100rpx;
}
.zx_list_item{
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.zx_img_wrapper{
  width: 700rpx;
  height: 450rpx;
}
.zx_img_wrapper > image{
  width: 100%;
  height: 100%;
}
.zx_info_box{
  width: 700rpx;
  box-sizing: border-box;
  background: #fff;
  padding: 0 20rpx 20rpx;
}
.zx_line1,.zx_line2{
  height: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.zx_line1 .zx_name{
  font-size: 30rpx;
}
.zx_line1 .zx_author_img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  box-sizing: border-box;
  border: 5rpx solid #fff;
  position: relative;
  top: -30rpx;
  right: 30rpx;
  float: right;
}
.zx_line2 .zx_info{
  font-size: 28rpx;
  color: #888;
}
.zx_love{
  margin-right: 30rpx;
}
.zx_love .iconfont_dec{
  margin-right: 10rpx;
}